<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {# Bootstrap CSS #}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

  <style>
    /* Enhanced styles for elegant date picker */
    .elegant-date-picker {
      position: relative;
    }

    .elegant-date-picker .date-input-group {
      transition: all 0.3s ease;
      background: rgba(255, 255, 255, 0.1);
    }

    .elegant-date-picker .date-input-group:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    .elegant-date-picker input[type="date"] {
      font-size: 0.85rem;
      color: rgba(255, 255, 255, 0.9);
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0.25rem 0.5rem;
      width: 130px;
    }

    .elegant-date-picker input[type="date"]:focus {
      box-shadow: none;
      outline: none;
      color: white;
    }

    /* Remove calendar icon in some browsers */
    .elegant-date-picker input[type="date"]::-webkit-calendar-picker-indicator {
      filter: invert(1);
      opacity: 0.7;
      cursor: pointer;
    }

    .elegant-date-picker input[type="date"]::-webkit-calendar-picker-indicator:hover {
      opacity: 1;
    }

    .elegant-date-picker .search-btn {
      background: transparent;
      border: none;
      color: rgba(255, 255, 255, 0.8);
      transition: all 0.2s ease;
    }

    .elegant-date-picker .search-btn:hover {
      color: white;
      transform: scale(1.1);
    }

    .elegant-date-picker .clear-btn {
      color: rgba(255, 255, 255, 0.6);
      transition: all 0.2s ease;
    }

    .elegant-date-picker .clear-btn:hover {
      color: white;
      transform: scale(1.1);
    }

    /* Season badge styling */
    .season-badge {
      font-size: 0.7rem;
      padding: 0.2rem 0.5rem;
      border-radius: 1rem;
    }

    /* Navbar improvements */
    .navbar .nav-link {
      position: relative;
    }

    .navbar .nav-link.active::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: currentColor;
    }

    /* Season indicator */
    .season-indicator {
      font-size: 0.75rem;
      padding: 0.15rem 0.5rem;
      border-radius: 1rem;
      background: rgba(255, 255, 255, 0.15);
      color: white;
      margin-left: 0.5rem;
    }

    /* Tooltip styling */
    .date-tooltip {
      position: absolute;
      top: 100%;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.75rem;
      margin-top: 0.5rem;
      width: 200px;
      text-align: center;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .elegant-date-picker:hover .date-tooltip {
      opacity: 1;
      visibility: visible;
    }
  </style>

  {% block stylesheets %}{% endblock %}
</head>
<body>
{# Navigation Bar #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="{{ path('app_home') }}">
      <i class="fas fa-store me-2"></i>EL_NASBA
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_home') }}">
            <i class="fas fa-home me-1"></i>Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_product_app_products') }}">
            <i class="fas fa-box me-1"></i>Products
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_cart') }}">
            <i class="fas fa-shopping-cart me-1"></i>Cart
          </a>
        </li>
      </ul>

      {# ENHANCED ELEGANT DATE PICKER IN NAVBAR #}
      <div class="elegant-date-picker me-3">
        <form method="GET" action="{{ path('app_product_app_products') }}" class="d-flex align-items-center">
          <div class="d-flex align-items-center date-input-group rounded-pill px-2 py-1">
            <i class="fas fa-calendar-alt text-white-50 me-1"></i>
            <input type="date"
                   class="form-control-sm"
                   name="filter_date"
                   value="{{ app.request.query.get('filter_date') ?? 'now'|date('Y-m-d') }}"
                   title="Select date to find seasonal products">
            <button type="submit" class="search-btn px-1" title="Search products">
              <i class="fas fa-search"></i>
            </button>
          </div>
          {% if app.request.query.get('filter_date') %}
            <a href="{{ path('app_product_app_products') }}" class="clear-btn ms-1" title="Clear filter">
              <i class="fas fa-times"></i>
            </a>
          {% endif %}

          {# Current season indicator - optional #}
          {% if app.request.attributes.get('_route') starts with 'app_product_' and current_season is defined and current_season %}
            <span class="season-indicator">
                                    <i class="fas fa-leaf me-1"></i>{{ current_season.name }}
                                </span>
          {% endif %}
        </form>

        {# Tooltip with explanation #}
        <div class="date-tooltip">
          Select any date to find products available for that season
        </div>
      </div>

      {# User menu #}
      <ul class="navbar-nav">
        {% if app.user %}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-user me-1"></i>{{ app.user.email ?? 'User' }}
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><a class="dropdown-item" href="#">Orders</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
            </ul>
          </li>
        {% else %}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_login') }}">
              <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
          </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>

{# Main content area #}
<main>
  {% block body %}{% endblock %}
</main>

{# Footer #}
<footer class="bg-dark text-light py-4 mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h5>EL_NASBA</h5>
        <p class="mb-0">Your seasonal shopping destination</p>
      </div>
      <div class="col-md-6 text-md-end">
        <p class="mb-0">&copy; 2024 EL_NASBA. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
