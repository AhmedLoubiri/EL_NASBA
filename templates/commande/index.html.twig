{# templates/a.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
    <h1>My Orders</h1>

    {% if orders is empty %}
        <p>No orders found.</p>
    {% else %}
        <table>
            <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                    <td>{{ order.status }}</td>
                    <td>{{ order.total|number_format(2) }} â‚¬</td>
                    <td>
                        <a href="{{ path('order_show', {id: order.id}) }}">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
