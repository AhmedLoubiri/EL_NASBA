{% extends 'base.html.twig' %}

{% block title %}{{ product.label }} - Détails du produit{% endblock %}

{% block body %}
  <div class="container my-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_product_list_product') }}">Produits</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ product.label }}</li>
      </ol>
    </nav>

    <div class="row">
      <div class="col-md-6">
        <img src="{{ asset('pics/' ~ product.ImageUrl) }}" class="img-fluid rounded mb-3" alt="{{ product.label }}">
      </div>

      <div class="col-md-6">
        <h2 class="mb-3">{{ product.label }}</h2>

        <!-- Categories -->
        {% if product.categories is not empty %}
          <div class="mb-3">
            {% for category in product.categories %}
              <span class="badge bg-primary me-1">{{ category.label }}</span>
            {% endfor %}
          </div>
        {% endif %}

        <!-- Price -->
        <p class="display-6 fw-semibold mb-4">{{ product.prix }} dt</p>

        <!-- Description -->
        <div class="mb-4">
          <h5>Description</h5>
          <p class="text-muted">{{ product.description }}</p>
        </div>

        <!-- Add to Cart -->
        <div class="mt-4">
          {% if app.user %}
            <form method="post" action="{{ path('app_cart_add', {'id': product.id}) }}" class="mb-3">
              <div class="input-group">
                <input type="number" class="form-control" name="quantity" value="1" min="1">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-cart-plus"></i> Ajouter au panier
                </button>
              </div>
            </form>
          {% else %}
            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i>
              <a href="{{ path('app_login') }}">Connectez-vous</a> pour ajouter ce produit au panier.
            </div>
          {% endif %}

          <a href="{{ path('app_product_list_product') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour aux produits
          </a>
        </div>
      </div>
    </div>

    <!-- Détails du produit -->
    <div class="card mt-5">
      <div class="card-header">
        <h5><i class="fas fa-info-circle"></i> Détails du produit</h5>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mb-0">
          <li><strong>Référence:</strong> {{ product.id }}</li>
          <li><strong>Catégories:</strong>
            {% for category in product.categories %}
              {{ category.label }}{% if not loop.last %}, {% endif %}
            {% endfor %}
          </li>

        </ul>
      </div>
    </div>
  </div>
{% endblock %}
